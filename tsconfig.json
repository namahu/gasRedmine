{
    "compileOnSave": true,
    "compilerOptions": {
        "esModuleInterop": true,
        "target": "es5",
        "lib": [
            "es2015",
            "es5",
            "es6",
            "es2017"
        ],
        "strict": true,
        "inlineSourceMap": true,
        "typeRoots": ["src/types", "node_modules/@types"]
    },
    "moduleResolution": "node",
    "include": [
        "src/**/*.ts",
        "tests/**/*.ts"
    ]
}
